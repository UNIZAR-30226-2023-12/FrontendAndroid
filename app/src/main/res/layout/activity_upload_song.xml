<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".BecomeArtist">

  <TextView
      android:id="@+id/uploadTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:gravity="center"
      android:text="@string/Upload_title"
      android:textColor="@color/regular_text"
      android:textSize="24pt"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.493"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/inReason"
      android:layout_width="269dp"
      android:layout_height="158dp"
      android:layout_marginTop="40dp"
      android:backgroundTint="@color/regular_text"
      android:ems="10"
      android:gravity="center"
      android:hint="@string/Upload_reason"
      android:inputType="textEmailAddress"
      android:textColor="@color/regular_text"
      android:textColorHint="@color/regular_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.502"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/uploadTitle" />

  <TextView
      android:id="@+id/bSolicitar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="52dp"
      android:background="@drawable/button1"
      android:gravity="center"
      android:padding="8dp"
      android:text="@string/Upload_send"
      android:textColor="@color/button_text"
      android:textSize="36sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/inReason" />


  </androidx.constraintlayout.widget.ConstraintLayout>