<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".upload_audio">

    <TextView
        android:id="@+id/uploadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/UploadAudio_title"
        android:textColor="@color/regular_text"
        android:textSize="24pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/FileRoute"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/regular_text"
        android:ems="10"
        android:gravity="center"
        android:hint="Indique la ruta completa al audio en su dispositivo"
        android:inputType="textEmailAddress"
        android:textColor="@color/regular_text"
        android:textColorHint="@color/regular_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadTitle" />

    <EditText
        android:id="@+id/esCancion"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="@color/regular_text"
        android:ems="10"
        android:gravity="center"
        android:hint="Es una canción (si/no)"
        android:inputType="textEmailAddress"
        android:textColor="@color/regular_text"
        android:textColorHint="@color/regular_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadTitle" />

    <EditText
        android:id="@+id/inDuracion"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="176dp"
        android:backgroundTint="@color/regular_text"
        android:ems="10"
        android:gravity="center"
        android:hint="Introduzca la duración en segundos"
        android:inputType="textEmailAddress"
        android:textColor="@color/regular_text"
        android:textColorHint="@color/regular_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadTitle" />

    <EditText
        android:id="@+id/InCalidad"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="252dp"
        android:backgroundTint="@color/regular_text"
        android:ems="10"
        android:gravity="center"
        android:hint="Calidad (alta/baja)"
        android:inputType="textEmailAddress"
        android:textColor="@color/regular_text"
        android:textColorHint="@color/regular_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadTitle" />

    <EditText
        android:id="@+id/InGeneros"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="336dp"
        android:backgroundTint="@color/regular_text"
        android:ems="10"
        android:gravity="center"
        android:hint="Género de la canción:"
        android:inputType="textEmailAddress"
        android:textColor="@color/regular_text"
        android:textColorHint="@color/regular_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uploadTitle" />

    <TextView
        android:id="@+id/bSubir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="640dp"
        android:background="@drawable/button1"
        android:gravity="center"
        android:padding="8dp"
        android:text="Subir"
        android:textColor="@color/button_text"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>